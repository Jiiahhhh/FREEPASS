<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNasibSparpartOliTransmisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserratbold"
        android:text="Kondisi Oli Transmisi?"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp" />

    <Button
        android:id="@+id/btnOliTransmisiOKE"
        android:layout_width="95dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tvNasibSparpartOliTransmisi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_red"
        android:fontFamily="@font/montserratbold"
        android:text="OK"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnOliTransmisiTIDAK"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvNasibSparpartOliTransmisi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btnOliTransmisiOKE"
        android:background="@drawable/button_border_red"
        android:fontFamily="@font/montserratbold"
        android:text="NOT OK"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tvHargaOliTransmisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnOliTransmisiOKE"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserratregular"
        android:text="Estimasi Biaya"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtHargaOliTransmisi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvHargaOliTransmisi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_red_border"
        android:fontFamily="@font/montserratregular"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:textColorHint="@color/colorPrimary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvKomentarOliTransmisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtHargaOliTransmisi"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserratregular"
        android:text="Komentar"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edtKomentarOliTransmisi"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tvKomentarOliTransmisi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_red_border"
        android:fontFamily="@font/montserratregular"
        android:padding="10dp"
        android:gravity="left|top"
        android:paddingStart="15dp"
        android:textColorHint="@color/colorPrimary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvFotoOliTransmisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtKomentarOliTransmisi"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserratregular"
        android:text="Foto"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imgFotoOliTransmisi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tvFotoOliTransmisi"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_red_border"
        android:padding="10dp"
        android:src="@drawable/inputcamera"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnOliTransmisiSELESAI"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/imgFotoOliTransmisi"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_red"
        android:fontFamily="@font/montserratbold"
        android:text="Selesai"
        android:textColor="@color/white"
        android:textSize="15dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>